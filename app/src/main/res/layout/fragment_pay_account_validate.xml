<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:src="@mipmap/logo_alipay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="验证码已发送到您的支付宝账户所绑定的手机号上"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/text_size_smaller" />

            <EditText
                android:id="@+id/et_validate_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edit_white"
                android:gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="@dimen/text_charging_remaining" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_bt_submit" />
</LinearLayout>