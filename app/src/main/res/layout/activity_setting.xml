<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <com.aiba.haimaelc.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_setting" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="海马新能源"
                        android:textColor="@color/line_gray"
                        android:textSize="@dimen/text_size_smaller" />

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/line_gray"
                        android:textSize="@dimen/text_size_smallest" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/official_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_white_gray"
                    android:drawableRight="@mipmap/icon_arrow_right_small"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="官方网站"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_white_gray"
                    android:drawableRight="@mipmap/icon_arrow_right_small"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="联系我们"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_white_gray"
                    android:drawableRight="@mipmap/icon_arrow_right_small"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="给我们评分"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_white_gray"
                    android:drawableRight="@mipmap/icon_arrow_right_small"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="使用协议"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/app_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_white_gray"
                    android:drawableRight="@mipmap/icon_arrow_right_small"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="使用帮助"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/check_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_white_gray"
                    android:drawableRight="@mipmap/icon_arrow_right_small"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="检查更新"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />
            </LinearLayout>
        </LinearLayout>
    </com.aiba.haimaelc.widget.CustomerScrollView>

    <include layout="@layout/layout_bt_submit" />
</LinearLayout>