<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/average_cost_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_statustics_item_padding"
    android:paddingTop="@dimen/activity_statustics_item_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingLeft="15dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="昵称"
        android:gravity="center"
        android:textColor="@color/main_txt_black"
        android:textSize="@dimen/text_size_normal"
        android:maxLength="5"/>

    <TextView
        android:id="@+id/average_elc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="平均耗电"
        android:textColor="@color/main_txt_black"
        android:textSize="@dimen/text_size_normal"/>

    <TextView
        android:id="@+id/average_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="平均费用"
        android:textColor="@color/main_txt_black"
        android:textSize="@dimen/text_size_normal"/>

</LinearLayout>