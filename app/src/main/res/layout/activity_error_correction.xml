<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <com.aiba.haimaelc.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/menu_vertical_margin"
                android:paddingLeft="@dimen/menu_horizontal_margin"
                android:paddingRight="@dimen/menu_horizontal_margin"
                android:paddingTop="@dimen/menu_vertical_margin"
                android:text="选择纠错选项"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="@dimen/menu_horizontal_margin"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="没有找到该充电点"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="@dimen/menu_horizontal_margin"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="地图坐标错误"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="@dimen/menu_horizontal_margin"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="充电设备无法正常使用"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_gray" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_selector"
                    android:drawablePadding="@dimen/menu_horizontal_margin"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:text="车位状态显示错误"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/menu_vertical_margin"
                android:paddingLeft="@dimen/menu_horizontal_margin"
                android:paddingRight="@dimen/menu_horizontal_margin"
                android:paddingTop="@dimen/menu_vertical_margin"
                android:text="其他补充"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请补充更多信息以便我们更好的为您服务！\n谢谢！（100字以内）"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:lineSpacingMultiplier="1.2"
                    android:lines="5"
                    android:maxLength="50"
                    android:paddingBottom="@dimen/menu_vertical_margin"
                    android:paddingLeft="@dimen/menu_horizontal_margin"
                    android:paddingRight="@dimen/menu_horizontal_margin"
                    android:paddingTop="@dimen/menu_vertical_margin"
                    android:textColor="@color/text_gray_dark"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />
            </LinearLayout>
        </LinearLayout>
    </com.aiba.haimaelc.widget.CustomerScrollView>

    <include layout="@layout/layout_bt_submit" />
</LinearLayout>
